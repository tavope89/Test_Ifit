@model List<string>
@{
    ViewBag.Title = "Puzzle matrix";
    var index = 1;
}

<div class="row">
    <div class="col-md-8">
        <section id="PanelPuzzle">
            @Html.AntiForgeryToken()
            <h4>Puzzle Matrix</h4>
            <hr/>
            <div id="HeadToSearch" class="form-group">
                @Html.Label("lblSearchedWord", "Searched word", new { @class = "col-md-3 control-label" })
                <div class="col-md-6">
                    @Html.TextBox("txtSearchedWord", "", new {@class = "form-control"})
                </div>
                <a class="btn btn-default" id="btnSearchedWord">Search</a>
            </div>
            <hr />
            <div class="form-group">
                <div class="table-responsive col-md-12">
                    <table class="table" id="TablePuzz">
                        @foreach (var item in Model)
                        {
                            <tr>
                                @for (int i = 0; i < item.Length; i++)
                                {
                                    <td id="Cell_@index">
                                        @Html.Label("Cell_Value_" + index, item[i].ToString())
                                    </td>
                                    index++;
                                }
                            </tr>
                            
                        }
                    </table>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-4">
        <section id="PanelWordList">
            @Html.Partial("_ListWords", (List<string>) ViewBag.ListWords)
        </section>
    </div>
</div>
   
<script type="text/javascript">
    var symbolString = @Html.Raw(ViewBag.symbolString);
    
</script>